<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.ProductMapper">
    <select id="InfoKindSelect" resultType="com.example.pojo.Product">
        select id, manager_id, kind, name, price, image_Url imageUrl from product
        <if test="kindList.size() > 0">
            where kind in
            <foreach item="kind" index="index" collection="kindList" open="(" separator="," close=")">
                #{kind}
            </foreach>
        </if>
    </select>
</mapper>